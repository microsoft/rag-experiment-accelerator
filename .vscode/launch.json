            "module": "01_index",
            "justMyCode": true,
            "envFile": "${input:dotEnvFilePath}",
        },
        {
            "name": "2. Generate QA",
            "type": "debugpy",
            "request": "launch",
            "module": "02_qa_generation",
            "justMyCode": true,
            "envFile": "${input:dotEnvFilePath}",
        },
        {
            "name": "3. Querying",
            "type": "debugpy",
            "request": "launch",
            "module": "03_querying",
            "justMyCode": true,
            "envFile": "${input:dotEnvFilePath}",
        },
        {
            "name": "4. Evaluate",
            "type": "debugpy",
            "request": "launch",
            "module": "04_evaluation",
            "justMyCode": true,
            "envFile": "${input:dotEnvFilePath}",
        }
    ],
    "inputs": [
        {
            "id": "dotEnvFilePath",
            "type": "command",
            "command": "azure-dev.commands.getDotEnvFilePath"
        }
    ]
}
